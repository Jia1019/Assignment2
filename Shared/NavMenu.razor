        <li class="nav-item px-3">
            <NavLink class="nav-link" href="PeopleList">
                <span class="oi oi-list" aria-hidden="true"></span> People List
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="AddPerson">
